<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL :"
            android:paddingRight="70dp"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:textColor="@android:color/holo_orange_dark"/>

        <EditText
            android:id="@+id/modifyUrlEtx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" 
            android:lines="1"/>

        <Button
            android:id="@+id/modifyUrlCopybtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID :"
            android:paddingRight="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:textColor="@android:color/holo_blue_dark"/>

        <EditText
            android:id="@+id/modifyIdEtx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" 
            android:lines="1"/>

        <Button
            android:id="@+id/modifyIdCopybtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:textColor="@android:color/holo_red_light"/>

        <EditText
            android:id="@+id/modifyPassEtx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" 
            android:lines="1">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/modifyPassCopybtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/modifySavebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/modifyDeletebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete" />

    </LinearLayout>

</LinearLayout>
